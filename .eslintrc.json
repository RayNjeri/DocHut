{
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "react/jsx-filename-extension": [
    "error",
    {
      "extensions": [
        ".js",
        ".jsx"
      ]
    }
  ],
  "rules": {
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "curly": [
      "error",
      "multi-line"
    ],
    "no-unused-vars": 1,
    "no-shadow": [
      0,
      {
        "allow": [
          "req",
          "res",
          "err"
        ]
      }
    ]
  }
}
